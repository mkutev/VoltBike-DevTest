/** @var \Mageplaza\Faqs\Block\Link\Footer $block */
/** @var \Mageplaza\Faqs\Helper\Data $helper */
$helper = $this->helper(\Mageplaza\Faqs\Helper\Data::class);
?>

<?php if ($helper->isEnabled() && $helper->getFaqsPageConfig('route') && $helper->isEnabledFaqsPage()): ?>
    <?php if (strpos($helper->getFaqsPageConfig('link'), (string) \Mageplaza\Faqs\Model\Config\Source\System\LinkPosition::FOOTERLINK) !== false):
        if ($block->isCurrent()): ?>
            <li>
                <strong>
                    <?php echo $block->escapeHtml($block->getLabel()); ?>
                </strong>
            </li>
        <?php else: ?>
            <li>
                <a <?php echo $block->getLinkAttributes() ?>>
                    <?php echo $block->escapeHtml($block->getLabel()); ?>
                    <?php echo ($block->getCounter()) ? '<span>' . $block->escapeHtml($block->getCounter()) . '</span>' : ''; ?>
                </a>
            </li>
        <?php endif;
    endif; ?>
<?php endif; ?>
