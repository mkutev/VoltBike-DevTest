<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="mpfaqs_articles" class="Mageplaza\Faqs\Block\Widget\Articles">
        <label translate="true">Mageplaza FAQs</label>
        <description>Mageplaza FAQs Widget </description>
        <parameters>
            <parameter name="title" xsi:type="text" required="false" visible="true">
                <label translate="true">Mageplaza FAQs Widget Title</label>
                <value>Mageplaza FAQs Widget</value>
            </parameter>
        </parameters>
        <containers>
            <container name="content">
                <template name="articles" value="articles" />
            </container>
        </containers>
    </widget>
</widgets>